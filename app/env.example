# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Devure.in
NEXT_PUBLIC_SITE_DESCRIPTION=Custom web applications and development services

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================
# MongoDB Connection String (local or Atlas)
MONGODB_URI=mongodb://localhost:27017/devure_blog
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/devure_blog

# Database Name
MONGODB_DB_NAME=devure_blog

# Connection Pool Settings
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_CONNECT_TIMEOUT_MS=10000
MONGODB_SOCKET_TIMEOUT_MS=45000

# MongoDB Authentication (if using Atlas)
MONGODB_USERNAME=your_mongodb_username
MONGODB_PASSWORD=your_mongodb_password

# =============================================================================
# AWS S3 CONFIGURATION
# =============================================================================
# S3 Bucket Settings
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY_ID=your_access_key_id
AWS_S3_SECRET_ACCESS_KEY=your_secret_access_key

# S3 Endpoint (for local development with MinIO)
AWS_S3_ENDPOINT=

# S3 File Prefixes
AWS_S3_MDX_PREFIX=blogs/mdx
AWS_S3_IMAGES_PREFIX=blogs/images

# =============================================================================
# ADMIN AUTHENTICATION
# =============================================================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=devure2024
ADMIN_EMAIL=admin@devure.in

# =============================================================================
# SEO & META CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SITE_KEYWORDS=web development, custom applications, software solutions
NEXT_PUBLIC_SITE_AUTHOR=Devure Team
NEXT_PUBLIC_SITE_TWITTER_HANDLE=@devure_in
NEXT_PUBLIC_SITE_FACEBOOK_APP_ID=

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your_email@gmail.com
EMAIL_SERVER_PASSWORD=your_app_password
EMAIL_FROM=noreply@devure.in

# =============================================================================
# CONTENT MANAGEMENT
# =============================================================================
# Default author information
DEFAULT_AUTHOR_NAME=Devure Team
DEFAULT_AUTHOR_PROFILE_URL=https://devure.in
DEFAULT_AUTHOR_AVATAR=https://devure.in/avatar.png

# Default blog settings
DEFAULT_BLOG_CATEGORY=Technology
DEFAULT_BLOG_TAGS=web-development,nextjs,typescript
DEFAULT_COVER_IMAGE=https://images.unsplash.com/photo-1461749280684-dccba630e2f6
DEFAULT_OG_IMAGE=https://images.unsplash.com/photo-1461749280684-dccba630e2f6

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Placeholder images for development
PLACEHOLDER_IMAGE_URL=https://images.unsplash.com/photo-1461749280684-dccba630e2f6

# Development ports
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# =============================================================================
# CACHE & PERFORMANCE
# =============================================================================
# Redis (optional for caching)
REDIS_URL=
REDIS_PASSWORD=

# Cache settings
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Vercel
VERCEL_URL=
VERCEL_GIT_COMMIT_SHA=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_BLOG_COMMENTS=false
ENABLE_BLOG_SHARING=true
ENABLE_BLOG_SEARCH=true
ENABLE_BLOG_RSS=true

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Disqus (for comments)
NEXT_PUBLIC_DISQUS_SHORTNAME=

# Social Media
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/devure_in
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/devure
NEXT_PUBLIC_GITHUB_URL=https://github.com/devure

# =============================================================================
# SECURITY HEADERS
# =============================================================================
# Content Security Policy
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-eval' 'unsafe-inline'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_IMG_SRC="'self' data: https:"
CSP_FONT_SRC="'self' data:"
CSP_CONNECT_SRC="'self'"

# =============================================================================
# ENVIRONMENT SPECIFIC
# =============================================================================
# Development
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# Production (uncomment when deploying)
# NODE_ENV=production
# NEXT_PUBLIC_ENVIRONMENT=production 